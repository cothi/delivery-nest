{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testEnvironmentOptions": {
    "dotenv": {
      "path": ".env.test"
    }
  },
  "globals": {
    "NODE_ENV": "test"
  },
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globalTeardown": "<rootDir>/teardown.ts"
}
